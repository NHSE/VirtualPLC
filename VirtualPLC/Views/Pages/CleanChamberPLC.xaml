<Page
    x:Class="VirtualPLC.Views.Pages.CleanChamberPLC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VirtualPLC.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CleanChamber"
    d:DataContext="{d:DesignInstance local:CleanChamberPLC, IsDesignTimeCreatable=False}"
    d:DesignHeight="500"
    d:DesignWidth="300"
    mc:Ignorable="d"
    Background="{DynamicResource ApplicationBackgroundBrush}">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <UniformGrid Columns="2" Rows="3" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">

            <!-- Chamber 1 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Chamber 1" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="Wheat"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock Text="Motor ON :" VerticalAlignment="Center" Foreground="Wheat"/>
                        <CheckBox IsChecked="{Binding ViewModel.CleanChamber1_motorON}" Margin="10,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ViewModel.CleanChamber1_taget_RPM, StringFormat='Target RPM : {0}'}" Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.CleanChamber1_RPM , StringFormat ='Actual RPM : {0}'}" Foreground="Wheat"/>
                </StackPanel>
            </Border>

            <!-- Chamber 2 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Chamber 2" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="Wheat"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock Text="Motor ON :" VerticalAlignment="Center" Foreground="Wheat"/>
                        <CheckBox IsChecked="{Binding ViewModel.CleanChamber2_motorON}" Margin="10,0,0,0" Foreground="Wheat"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ViewModel.CleanChamber2_taget_RPM, StringFormat='Target RPM: {0}'}" Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.CleanChamber2_RPM , StringFormat ='Actual RPM: {0}'}" Foreground="Wheat"/>
                </StackPanel>
            </Border>

            <!-- Chamber 3 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Chamber 3" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="Wheat"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock Text="Motor ON :" VerticalAlignment="Center" Foreground="Wheat"/>
                        <CheckBox IsChecked="{Binding ViewModel.CleanChamber3_motorON}" Margin="10,0,0,0" Foreground="Wheat"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ViewModel.CleanChamber3_taget_RPM, StringFormat='Target RPM: {0}'}" Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.CleanChamber3_RPM , StringFormat ='Actual RPM: {0}'}" Foreground="Wheat"/>
                </StackPanel>
            </Border>

            <!-- Chamber 4 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Chamber 4" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="Wheat"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock Text="Motor ON :" VerticalAlignment="Center" Foreground="Wheat"/>
                        <CheckBox IsChecked="{Binding ViewModel.CleanChamber4_motorON}" Margin="10,0,0,0" Foreground="Wheat"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ViewModel.CleanChamber4_taget_RPM, StringFormat='Target RPM: {0}'}" Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.CleanChamber4_RPM , StringFormat ='Actual RPM: {0}'}" Foreground="Wheat"/>
                </StackPanel>
            </Border>

            <!-- Chamber 5 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Chamber 5" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="Wheat"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock Text="Motor ON :" VerticalAlignment="Center" Foreground="Wheat"/>
                        <CheckBox IsChecked="{Binding ViewModel.CleanChamber5_motorON}" Margin="10,0,0,0" Foreground="Wheat"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ViewModel.CleanChamber5_taget_RPM, StringFormat='Target RPM: {0}'}" Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.CleanChamber5_RPM , StringFormat ='Actual RPM: {0}'}" Foreground="Wheat"/>
                </StackPanel>
            </Border>

            <!-- Chamber 6 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Chamber 6" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="Wheat"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                        <TextBlock Text="Motor ON :" VerticalAlignment="Center" Foreground="Wheat"/>
                        <CheckBox IsChecked="{Binding ViewModel.CleanChamber6_motorON}" Margin="10,0,0,0" Foreground="Wheat"/>
                    </StackPanel>
                    <TextBlock Text="{Binding ViewModel.CleanChamber6_taget_RPM, StringFormat='Target RPM: {0}'}" Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.CleanChamber6_RPM , StringFormat ='Actual RPM: {0}'}" Foreground="Wheat"/>
                </StackPanel>
            </Border>

        </UniformGrid>
    </ScrollViewer>
</Page>
