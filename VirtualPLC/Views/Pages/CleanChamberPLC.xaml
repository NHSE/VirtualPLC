<Page
    x:Class="VirtualPLC.Views.Pages.CleanChamberPLC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VirtualPLC.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CleanChamber"
    d:DataContext="{d:DesignInstance local:CleanChamberPLC, IsDesignTimeCreatable=False}"
    d:DesignHeight="500"
    d:DesignWidth="400"
    mc:Ignorable="d"
    Background="{DynamicResource ApplicationBackgroundBrush}">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <UniformGrid Columns="2" Rows="3" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">

            <!-- Chamber 1 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Chamber 1" 
                   FontWeight="Bold" 
                   FontSize="16" 
                   Margin="0,0,0,10" 
                   Foreground="Wheat"
                   VerticalAlignment="Center"/>
                        <Ellipse Width="16" Height="16" Margin="10,0,0,9" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill">
                                        <Setter.Value>
                                            <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                <GradientStop Color="DarkRed" Offset="0"/>
                                                <GradientStop Color="Red" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ViewModel.CleanChamber1_motorON}" Value="True">
                                            <Setter Property="Fill">
                                                <Setter.Value>
                                                    <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                        <GradientStop Color="DarkGreen" Offset="0"/>
                                                        <GradientStop Color="LightGreen" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                    </StackPanel>
                    <TextBlock Text="{Binding ViewModel.CleanChamber1_taget_RPM, StringFormat='Target RPM : {0}'}" Width="150" Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.CleanChamber1_RPM , StringFormat ='Actual RPM : {0}'}" Width="150" Foreground="Wheat"/>
                </StackPanel>
            </Border>

            <!-- Chamber 2 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Chamber 2" 
                                   FontWeight="Bold" 
                                   FontSize="16" 
                                   Margin="0,0,0,10" 
                                   Foreground="Wheat"
                                   VerticalAlignment="Center"/>
                        <Ellipse Width="16" Height="16" Margin="10,0,0,9" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill">
                                        <Setter.Value>
                                            <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                <GradientStop Color="DarkRed" Offset="0"/>
                                                <GradientStop Color="Red" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ViewModel.CleanChamber2_motorON}" Value="True">
                                            <Setter Property="Fill">
                                                <Setter.Value>
                                                    <RadialGradientBrush GradientOrigin="0.3,0.3">
                                                        <GradientStop Color="DarkGreen" Offset="0"/>
                                                        <GradientStop Color="LightGreen" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                    </StackPanel>

                    <!-- RPM Info -->
                    <TextBlock Text="{Binding ViewModel.CleanChamber2_taget_RPM, StringFormat='Target RPM: {0}'}" Width="150"
                   Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.CleanChamber2_RPM , StringFormat ='Actual RPM: {0}'}" Width="150"
                   Foreground="Wheat"/>
                </StackPanel>
            </Border>

            <!-- Chamber 3 -->
