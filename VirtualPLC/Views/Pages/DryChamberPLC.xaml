<Page x:Class="VirtualPLC.Views.Pages.DryChamberPLC"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VirtualPLC.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CleanChamber"
    d:DataContext="{d:DesignInstance local:DryChamberPLC, IsDesignTimeCreatable=False}"
    d:DesignHeight="500"
    d:DesignWidth="300"
    mc:Ignorable="d"
    Background="{DynamicResource ApplicationBackgroundBrush}">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <UniformGrid Columns="2" Rows="3" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">

            <!-- Chamber 1 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Chamber 1" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="0,0,0,10" 
                       Foreground="Wheat"
                       VerticalAlignment="Center"/> 
                        <Ellipse Width="16" Height="16" Margin="10,0,0,9" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="Gray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ViewModel.DryChamber1_motorON}" Value="True">
                                            <Setter Property="Fill" Value="LightGreen"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                    </StackPanel>
                    <TextBlock Text="{Binding ViewModel.DryChamber1_taget_RPM, StringFormat='Target RPM : {0}'}" Width="150" Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.DryChamber1_RPM , StringFormat ='Actual RPM : {0}'}" Width="150" Foreground="Wheat"/>
                </StackPanel>
            </Border>

            <!-- Chamber 2 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Chamber 2" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="0,0,0,10" 
                       Foreground="Wheat"
                       VerticalAlignment="Center"/>
                        <Ellipse Width="16" Height="16" Margin="10,0,0,9" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="Gray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ViewModel.DryChamber2_motorON}" Value="True">
                                            <Setter Property="Fill" Value="LightGreen"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                    </StackPanel>
                    <TextBlock Text="{Binding ViewModel.DryChamber2_taget_RPM, StringFormat='Target RPM: {0}'}" Width="150" Margin="0,0,0,3" Foreground="Wheat"/>
                    <TextBlock Text="{Binding ViewModel.DryChamber2_RPM , StringFormat ='Actual RPM: {0}'}" Width="150" Foreground="Wheat"/>
                </StackPanel>
            </Border>

            <!-- Chamber 3 -->
            <Border Margin="10" Padding="15" Background="Transparent" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Chamber 3" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="0,0,0,10" 
                       Foreground="Wheat"
                       VerticalAlignment="Center"/>
                        <Ellipse Width="16" Height="16" Margin="10,0,0,9" VerticalAlignment="Center">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="Gray"/>
